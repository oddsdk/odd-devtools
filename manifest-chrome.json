{
  "description": "Adds a new panel to the developer tools. The panel contains buttons that demonstrate various basic features of the devtools API.",
  "manifest_version": 3,
  "name": "devtools-panels",
  "version": "0.0.1",
  "author": "Jeff Griffiths",
  "homepage_url": "https://github.com/webnative-examples/webnative-devtools",
  "icons": {
    "48": "odd48.png",
    "96": "odd96.png"
  },
  "background": {
    "service_worker": "src/background/background.js",
    "scripts": [
      "src/events.js",
      "src/utils.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "https://*/*",
        "http://localhost/*"
      ],
      "js": ["src/content/page-load.js"]
    }
  ],
  "devtools_page": "src/devtools/devtools.html",
  "host_permissions": [
    "https://*/*",
    "http://localhost/*"
  ],
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "externally_connectable": {
    "matches": [
      "https://*/*"
    ]
  },
  "web_accessible_resources": [
    {
      "resources": [
        "src/content/content.js",
        "src/content/page-load.js"
      ],
      "matches": ["https://*/*"],
      "extension_ids": []
    }
  ]
}